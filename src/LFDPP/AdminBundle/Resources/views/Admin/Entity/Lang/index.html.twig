{% extends '@Admin/Admin/index.html.twig' %}

{% block body %}
    <h1>Langs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Languagecode</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lang in langs %}
            <tr>
                <td><a href="{{ path('admin_form_lang_show', { 'id': lang.id }) }}">{{ lang.id }}</a></td>
                <td>{{ lang.name }}</td>
                <td>{{ lang.languageCode }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_form_lang_show', { 'id': lang.id }) }}" class="btn btn-secondary">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_form_lang_edit', { 'id': lang.id }) }}" class="btn btn-info">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_form_lang_add') }}" class="btn btn-success">Create a new lang</a>
        </li>
    </ul>
{% endblock %}
